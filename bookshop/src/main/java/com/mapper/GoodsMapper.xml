<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.GoodsMapper">
	<select id="selectGoodsByID"  parameterType="String" resultType="com.domain.Goods">
		select * from goods where goodsid=#{goodsid}
	
	</select>
	
	<select id="selectCountGoods"   resultType="int">
		select count(*) from goods 
	</select>
	
	<select id="selectNewGoods"   resultType="com.domain.Goods" >
		select * from goods where goodsid in (select goodsid from newgoods)
	
	</select>
	<select id="selectPromotionGoods"  resultType="com.domain.Goods">
		select * from goods where goodsid in (select goodsid from promotiongoods)
	
	
	</select>
	<select id="selectSpecialGoods"  resultType="com.domain.Goods">
		select * from goods where goodsid in (select goodsid from specialgoods)
	
	
	</select>
	<select id="selectGoodsByPageNumber"  parameterType="int" resultType="com.domain.Goods">
		select * from goods limit #{num},3
	
	</select>

	<select id="selectAll"  resultType="com.domain.Goods">
		select * from goods
	</select>

	<update id="editBook" parameterType="com.domain.Goods">
		update goods
		set goodsname=#{goodsname},
		breifintroduction=#{breifintroduction},detailintroduction=#{detailintroduction},goodsprice=#{goodsprice}
		where
		goodsid=#{goodsid}
	</update>

	<delete id="deleteBook" parameterType="int" >
		delete from goods
		where
		goodsid=#{goodsid}
	</delete>
	
</mapper>